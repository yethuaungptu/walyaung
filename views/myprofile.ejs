<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
  <!--<![endif]-->
  <head>
    <% include ./partial/head %>
    <link rel="stylesheet" href="/assets/css/wizard.css" />
  </head>
  <body>
    <div id="preloader">
      <div id="status">&nbsp;</div>
    </div>
    <!-- Body content -->

    <% include ./partial/navbar %>
    <!-- End of nav bar -->

    <div class="page-head">
      <div class="container">
        <div class="row">
          <div class="page-head-content">
            <h1 class="page-title">
              Hello <%= locals.user.name %><small class="text-warning"
                >(<%= locals.user.type %> account)</small
              >
            </h1>
          </div>
        </div>
      </div>
    </div>
    <div class="content-area user-profiel" style="background-color: #fcfcfc">
      &nbsp;
      <div class="container">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 profiel-container">
            <form
              action="/myprofile"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="profiel-header">
                <h3>
                  <b>Update</b> YOUR PROFILE <br />
                  <small
                    >This information will let us know more about you.</small
                  >
                </h3>
                <hr />
              </div>

              <div class="clear">
                <div class="col-sm-3 col-sm-offset-1">
                  <div class="picture-container">
                    <div class="picture">
                      <img
                        src="<%= profile.imgUrl %>"
                        class="picture-src"
                        id="wizardPicturePreview"
                        title=""
                      />
                      <input type="file" name="photo" id="wizard-picture" />
                    </div>
                    <h6>Choose Picture</h6>
                  </div>
                </div>

                <div class="col-sm-3 padding-top-25">
                  <div class="form-group">
                    <label>Name <small>(required)</small></label>
                    <input
                      name="name"
                      type="text"
                      class="form-control"
                      value="<%= profile.name %>"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label>Role <small>(required)</small></label>
                    <input
                      name="role"
                      type="text"
                      class="form-control"
                      value="<%= profile.role %>"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label>Email <small>(Cann't modify)</small></label>
                    <input
                      name="email"
                      type="email"
                      readonly
                      class="form-control"
                      value="<%= profile.email %>"
                      required
                    />
                  </div>
                </div>
                <div class="col-sm-3 padding-top-25">
                  <div class="form-group">
                    <label>Phone <small>(required)</small></label>
                    <input
                      name="phone"
                      type="tel"
                      class="form-control"
                      value="<%= profile.phone %>"
                      pattern="[0-9]+"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label>Address <small>(required)</small></label>
                    <input
                      name="address"
                      type="text"
                      value="<%= profile.address %>"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label>Password :</label>
                    <input
                      type="password"
                      name="password"
                      class="form-control"
                    />
                  </div>
                </div>
                <div class="col-sm-6 padding-top-15">
                  <div class="form-group">
                    <label>Description <small>(required)</small></label>
                    <input
                      type="text"
                      name="desc"
                      class="form-control"
                      value="<%= profile.description %>"
                      required
                    />
                  </div>
                </div>
              </div>
              <div class="col-sm-12 col-sm-offset-1 text-center">
                <input
                  type="submit"
                  class="btn btn-finish btn-primary"
                  name="finish"
                  value="Update"
                />
              </div>
              <br />
            </form>
            <br /><br />
            <div
              class="box-two clear"
              style="padding: 10px 10px 10px 10px; margin: 10px"
            >
              <h4 class="text-center">Your Notifications</h4>
              <div class="col-sm-6">
                <h5 style="text-align: center">New</h5>
                <% for(var i = 0; i < instractNews.length; i++){%>
                <div
                  class="card box-two"
                  style="border-radius: 10px; padding-left: 10px"
                >
                  <div
                    class="card-title"
                    style="font-weight: bold; text-align: center; color: blue"
                  >
                    <h5><%= instractNews[i].propertyId.name %></h5>
                  </div>
                  <div class="card-body clear">
                    <div class="col-sm-8">
                      <p>Name : <%= instractNews[i].name %></p>
                      <p>Contact : <%= instractNews[i].contact %></p>
                    </div>
                    <div class="col-sm-4">
                      <button
                        class="btn btn-primary btn-sm"
                        onclick="changeNoti('<%= instractNews[i]._id %>','read')"
                      >
                        Make as read
                      </button>
                    </div>
                  </div>
                </div>
                <%}%>
              </div>
              <div class="col-sm-6">
                <h5 style="text-align: center">Read</h5>
                <% for(var i = 0; i < instractReads.length; i++){%>
                <div
                  class="card box-two"
                  style="border-radius: 10px; padding-left: 10px"
                >
                  <div
                    class="card-title"
                    style="font-weight: bold; text-align: center; color: blue"
                  >
                    <h5><%= instractReads[i].propertyId.name %></h5>
                  </div>
                  <div class="card-body clear">
                    <div class="col-sm-8">
                      <p>Name : <%= instractReads[i].name %></p>
                      <p>Contact : <%= instractReads[i].contact %></p>
                    </div>
                    <div class="col-sm-4">
                      <button
                        class="btn btn-primary btn-sm"
                        onclick="changeNoti('<%= instractReads[i]._id %>','delete')"
                      >
                        Delete
                      </button>
                    </div>
                  </div>
                </div>
                <%}%>
              </div>
            </div>
          </div>
        </div>
        <!-- end row -->
      </div>
    </div>

    <!-- Footer area-->
    <% include ./partial/footer %> <% include ./partial/script %>
    <script
      src="/assets/js/jquery.bootstrap.wizard.js"
      type="text/javascript"
    ></script>
    <script src="/assets/js/jquery.validate.min.js"></script>
    <script src="/assets/js/wizard.js"></script>
  </body>

  <script src="/javascripts/additional-methods.min.js"></script>
  <script>
    function changeNoti(id, type) {
      const data = { id: id, type: type };
      $.ajax("/changeNoti", {
        method: "POST",
        data: data,
        success: function (result) {
          if (result.status) {
            location.reload();
          } else {
            alert("Something was wrong, please check your fields");
          }
        },
      });
    }
  </script>
</html>
