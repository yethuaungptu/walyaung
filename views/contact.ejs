            <hr />
            <h2>Contact / Report form</h2>
            <form>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group">
                    <label for="firstname">Name</label>
                    <input
                      type="text"
                      name="firstname"
                      class="form-control"
                      id="firstname"
                    />
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                    <label for="lastname">Report Type</label>
                    <select name="type" id="rtype" class="form-control">
                      <option value="info">Info</option>
                      <option value="report">Report</option>
                      <option value="feedback">Feed Back</option>
                      <option value="upgrade">Agent Account Upgrad</option>
                    </select>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                    <label for="email">Email</label>
                    <input
                      type="text"
                      name="email"
                      class="form-control"
                      id="email"
                    />
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                    <label for="subject">Subject</label>
                    <input
                      type="text"
                      name="subject"
                      class="form-control"
                      id="subject"
                    />
                  </div>
                </div>
                <div class="col-sm-12">
                  <div class="form-group">
                    <label for="message">Message</label>
                    <textarea
                      id="message"
                      name="message"
                      class="form-control"
                    ></textarea>
                  </div>
                </div>
                <div class="col-sm-12 text-center">
                  <button
                    type="button"
                    class="btn btn-primary"
                    onclick="submitContact()"
                  >
                    <i class="fa fa-envelope-o"></i> Send message
                  </button>
                </div>
              </div>
              <!-- /.row -->
            </form>
          </div>
        </div>
