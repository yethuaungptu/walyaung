                <ul>
                  <li>
                    <strong
                      ><a href="mailto:shwemyay.mm@gmail.com"
                        >shwemyay.mm@gmail.com</a
                      ></strong
                    >
                  </li>
                </ul>
              </div>
              <!-- /.col-sm-4 -->
            </div>
